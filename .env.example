# ================================
# Telegram Bot
# ================================
BOT_TOKEN=PASTE_YOUR_TELEGRAM_BOT_TOKEN_HERE

# Telegram user_id администратора (ты)
ADMIN_USER_ID=123456789

# ================================
# Support
# ================================
# ID группы поддержки (бот должен быть участником)
# Узнать: отправь /getchatid в группе
SUPPORT_GROUP_ID=-1001234567890

# ================================
# Privatka (private channel)
# ================================
# ID приватного канала (бот должен быть админом)
# Если не нужен — оставь пустым
PRIVATE_CHANNEL_ID=-1001234567890

# ================================
# Storage
# ================================
# SQLite база данных (внутри контейнера)
DB_PATH=/data/bot.sqlite3

# Timezone (для логов и времени доступа)
TZ=Europe/Tallinn

# ================================
# Telegram Stars (XTR)
# ================================
# Цена доступа на 30 дней (в Stars)
STARS_PRICE=199

# Заголовок инвойса
STARS_TITLE=Access 30 days

# Описание инвойса
STARS_DESCRIPTION=Trading bot access for 30 days
